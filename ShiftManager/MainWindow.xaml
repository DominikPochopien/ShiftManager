<Window x:Class="GrafikManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Grafik for Manager" Height="850" Width="1200"
        Background="#121212" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style x:Key="WatermarkTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1F1F1F" BorderBrush="#333" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <Button Content="&lt;" Click="BtnPrevMonth_Click" Width="30" Height="30" FontWeight="Bold" Background="#252526"/>
                    <Border Background="#121212" CornerRadius="5" Margin="5,0" Padding="20,5">
                        <TextBlock x:Name="TxtCurrentMonth" Text="STYCZEŃ 2026" Foreground="#4CAF50" FontWeight="Bold" VerticalAlignment="Center" FontSize="14"/>
                    </Border>
                    <Button Content="&gt;" Click="BtnNextMonth_Click" Width="30" Height="30" FontWeight="Bold" Background="#252526"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <Button Content="EXCEL" Click="BtnExportToExcel_Click" Background="#217346" FontWeight="Bold" Margin="0,0,10,0" ToolTip="Generuj grafik do pliku .xlsx"/>
                    <Button Content="Zapisz Bazy" Click="BtnSaveEmployees_Click" Background="#7B1FA2"/>
                    <Button Content="Wczytaj Bazy" Click="BtnLoadEmployees_Click" Background="#7B1FA2"/>
                    <Border Width="1" Background="#444" Margin="5,5"/>
                    <Button Content="Zapisz Grafik" Click="BtnSaveSchedule_Click" Background="#4CAF50"/>
                    <Button Content="Wczytaj Grafik" Click="BtnLoadSchedule_Click" Background="#4CAF50"/>
                    <Button Content="Reset" Click="BtnReset_Click" Background="#D32F2F"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#252526" BorderBrush="#333" BorderThickness="0,0,1,0" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="NARZĘDZIA (Kliknij aby wybrać)" FontSize="16" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,0,2"/>
                        <TextBlock Text="Wskazówka: Prawy przycisk myszy usuwa element." FontSize="11" Foreground="#888" Margin="0,0,0,15" FontStyle="Italic"/>

                        <Border Background="#333" CornerRadius="5" Padding="10" Margin="0,0,0,20" BorderBrush="#4CAF50" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="AKTYWNY ZESTAW:" FontSize="10" Foreground="#AAA" FontWeight="Bold"/>
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock x:Name="TxtActiveCalendar" Text="Dział: -" Foreground="White" FontWeight="Bold" Margin="0,0,0,3"/>
                                        <TextBlock x:Name="TxtActiveEmp" Text="Pracownik: -" Foreground="White"/>
                                        <TextBlock x:Name="TxtActiveRole" Text="Rola: -" Foreground="White"/>
                                        <TextBlock x:Name="TxtActiveHours" Text="Godziny: -" Foreground="White"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="TERAZ KLIKNIJ W DZIEŃ ->" Foreground="#4CAF50" VerticalAlignment="Center" FontSize="10" TextWrapping="Wrap" Width="60" TextAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="1. WYBIERZ DZIAŁ (GRAFIK)" Foreground="MediumPurple" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,5">
                                <TextBox x:Name="InputCalendarName" Height="25" VerticalContentAlignment="Center" Background="#2D2D30" Foreground="White" BorderBrush="#3F3F46" KeyDown="InputCalendarName_KeyDown"/>
                                <TextBlock Text="Dodaj nowy dział (Enter)...">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource WatermarkTextStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=InputCalendarName}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <WrapPanel x:Name="PanelCalendarsList" Margin="0,5"/>
                        </StackPanel>

                        <TextBlock Text="2. WYBIERZ PRACOWNIKA" FontWeight="Bold" Foreground="#9C27B0" Margin="0,5"/>
                        <Grid Margin="0,0,0,5">
                            <TextBox x:Name="InputEmployee" KeyDown="InputEmployee_KeyDown" ToolTip="Wpisz i wciśnij Enter"/>
                            <TextBlock Text="Dodaj pracownika (Enter)...">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource WatermarkTextStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=InputEmployee}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        <WrapPanel x:Name="PanelEmployeesList" Margin="0,0,0,10"/>

                        <TextBlock Text="3. WYBIERZ ROLĘ" FontWeight="Bold" Foreground="#9C27B0" Margin="0,10,0,5"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBox x:Name="InputRole" KeyDown="InputRole_KeyDown" ToolTip="Wpisz i wciśnij Enter"/>
                                <TextBlock Text="Dodaj rolę (Enter)...">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource WatermarkTextStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=InputRole}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button Grid.Column="1" Content="Kol" Click="BtnRoleColor_Click" Background="#555"/>
                        </Grid>
                        <WrapPanel x:Name="PanelRolesList" Margin="0,0,0,10"/>

                        <TextBlock Text="4. WYBIERZ GODZINY" FontWeight="Bold" Foreground="#9C27B0" Margin="0,10,0,5"/>
                        <Grid Margin="0,0,0,5">
                            <TextBox x:Name="InputHours" KeyDown="InputHours_KeyDown"/>
                            <TextBlock Text="Dodaj godziny np. 8-16...">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource WatermarkTextStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=InputHours}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        <WrapPanel x:Name="PanelHoursList" Margin="0,0,0,10"/>

                        <Separator Background="#444" Margin="0,15"/>
                        <TextBlock Text="STATYSTYKI (Miesiąc)" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <StackPanel x:Name="PanelStats"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <ScrollViewer x:Name="RightPanelContainer" Grid.Column="1" Background="#121212" Padding="20" Visibility="Hidden">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Columns="7" Margin="0,0,0,10">
                        <TextBlock Text="Pon" HorizontalAlignment="Center" Foreground="#888"/>
                        <TextBlock Text="Wt" HorizontalAlignment="Center" Foreground="#888"/>
                        <TextBlock Text="Śr" HorizontalAlignment="Center" Foreground="#888"/>
                        <TextBlock Text="Czw" HorizontalAlignment="Center" Foreground="#888"/>
                        <TextBlock Text="Pt" HorizontalAlignment="Center" Foreground="#888"/>
                        <TextBlock Text="Sob" HorizontalAlignment="Center" Foreground="#888"/>
                        <TextBlock Text="Ndz" HorizontalAlignment="Center" Foreground="#FF5252"/>
                    </UniformGrid>

                    <ItemsControl x:Name="CalendarItems" Grid.Row="1">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="7"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding BackgroundColor}" Margin="2" CornerRadius="4" MinHeight="100" BorderBrush="#333" BorderThickness="1" MouseLeftButtonDown="Day_Click" Tag="{Binding Date}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="{Binding DisplayDate}" HorizontalAlignment="Right" Foreground="{Binding DateColor}" Margin="5" FontSize="14" FontWeight="Bold"/>

                                        <ItemsControl ItemsSource="{Binding Shifts}" Grid.Row="1" Margin="2">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{Binding RoleColor}" CornerRadius="3" Margin="0,1" Padding="3,1" ToolTip="PPM aby usunąć">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="{Binding EmployeeName}" Foreground="{Binding TextColor}" FontSize="11" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding Hours}" Grid.Column="1" Foreground="{Binding TextColor}" FontSize="11" Margin="5,0,0,0"/>
                                                        </Grid>
                                                        <Border.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Usuń zmianę" Click="MenuRemoveShift_Click" Tag="{Binding}"/>
                                                            </ContextMenu>
                                                        </Border.ContextMenu>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>